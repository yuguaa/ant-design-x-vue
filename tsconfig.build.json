{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declarationDir": "packages/ant-design-x-vue/dist/typings",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "baseUrl": "./",
    "types": ["unplugin-vue-macros/macros-global", "node"],
    "paths": {
      "ant-design-x-vue": ["./packages/ant-design-x-vue/src/index.ts"],
      "@ant-design-x-vue/components": ["./packages/components"],
      "ant-design-x-vue/resolver/*": ["src/resolver/*"],
    }
  },
  "vueCompilerOptions": {
    "plugins": ["unplugin-vue-macros/volar"]
  },
  "include": [
    "packages/components/**/*.ts",
    "packages/components/x-provider/**/*",
    "packages/components/theme/**/*",
    "packages/components/bubble/**/*"
  ],
  "exclude": ["packages/components/**/__tests__/**/*"]
}
