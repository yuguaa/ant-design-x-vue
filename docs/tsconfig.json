{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsxImportSource": "vue",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker", "DOM"],
    "types": ["unplugin-vue-macros/macros-global", "node"],
    "paths": {
      "ant-design-x-vue": ["../packages/ant-design-x-vue"],
      "~/*": ["./.vitepress/vitepress/*"]
    },
    "jsx": "preserve"
  },
  "vueCompilerOptions": {
    "plugins": ["unplugin-vue-macros/volar"]
  },
  "include": ["**/*", ".vitepress/**/*", "../typings/global.d.ts"],
  "exclude": ["node_modules"]
}
